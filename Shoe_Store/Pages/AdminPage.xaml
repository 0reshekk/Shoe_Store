<Page
    x:Class="Shoe_Store.Pages.AdminPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Shoe_Store.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Панель администратора"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{StaticResource PrimaryBackground}"
    FontSize="14"
    mc:Ignorable="d">

    <Grid Background="{StaticResource PrimaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Padding="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="{StaticResource AccentBrush}"
            CornerRadius="5">
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="0,0,15,0" Orientation="Vertical">
                    <TextBlock
                        x:Name="UserNameText"
                        FontSize="12"
                        FontWeight="Bold"
                        Text="" />
                    <TextBlock
                        x:Name="UserRoleText"
                        FontSize="11"
                        Text="" />
                </StackPanel>
                <Button
                    x:Name="LogoutBtn"
                    Width="80"
                    Height="30"
                    Background="{StaticResource SecondaryBackground}"
                    Click="LogoutBtn_Click"
                    Content="Выход" />
            </StackPanel>
        </Border>

        <TabControl
            Grid.Row="1"
            Margin="0,10,0,0"
            Background="{StaticResource PrimaryBackground}">
            <TabItem Background="{StaticResource SecondaryBackground}" Header="Товары">
                <Grid Background="{StaticResource PrimaryBackground}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel
                        Grid.Row="0"
                        Margin="10"
                        Orientation="Horizontal">
                        <Button
                            Margin="0,0,10,0"
                            Background="{StaticResource AccentBrush}"
                            Click="AddProduct_Click"
                            Content="Добавить товар" />
                        <Button
                            Margin="0,0,10,0"
                            Background="{StaticResource AccentBrush}"
                            Click="DeleteProduct_Click"
                            Content="Удалить товар" />
                    </StackPanel>

                    <Frame
                        x:Name="ProductsFrame"
                        Grid.Row="1"
                        Background="{StaticResource PrimaryBackground}" />
                </Grid>
            </TabItem>

            <TabItem Background="{StaticResource SecondaryBackground}" Header="Заказы">
                <Grid Background="{StaticResource PrimaryBackground}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel
                        Grid.Row="0"
                        Margin="10"
                        Orientation="Horizontal">
                        <Button
                            Margin="0,0,10,0"
                            Background="{StaticResource AccentBrush}"
                            Click="AddOrder_Click"
                            Content="Добавить заказ" />
                        <Button
                            Margin="0,0,10,0"
                            Background="{StaticResource AccentBrush}"
                            Click="DeleteOrder_Click"
                            Content="Удалить заказ" />
                    </StackPanel>

                    <ListView
                        x:Name="OrdersListView"
                        Grid.Row="1"
                        Background="{StaticResource PrimaryBackground}"
                        MouseDoubleClick="OrdersListView_MouseDoubleClick"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="5"
                                    Padding="10"
                                    BorderBrush="{StaticResource AccentBrush}"
                                    BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                                                <TextBlock FontWeight="SemiBold" Text="Артикул: " />
                                                <TextBlock Text="{Binding Sostav.Articul}" />
                                            </StackPanel>


                                            <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                                                <TextBlock FontWeight="SemiBold" Text="Статус: " />
                                                <TextBlock Text="{Binding Status1.StatusName}" />
                                            </StackPanel>

                                            <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                                                <TextBlock FontWeight="SemiBold" Text="Адрес: " />
                                                <TextBlock Text="{Binding Address.City}" />
                                            </StackPanel>

                                            <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                                                <TextBlock FontWeight="SemiBold" Text="Дата заказа: " />
                                                <TextBlock Text="{Binding DateOrder, StringFormat={}dd.MM.yyyy}" />
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center">
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                FontWeight="SemiBold"
                                                Text="Дата доставки" />
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="{Binding DateDel, StringFormat={}dd.MM.yyyy}" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Cursor" Value="Hand" />
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{StaticResource AccentBrush}" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
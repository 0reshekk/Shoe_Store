<Page
    x:Class="Shoe_Store.Pages.AuthPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Shoe_Store.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Авторизация"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="TimesNewRoman"
    FontSize="14"
    mc:Ignorable="d">

    <Grid Background="{StaticResource PrimaryBackground}">
        <Border
            Padding="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{StaticResource SecondaryBackground}"
            CornerRadius="10">
            <StackPanel Width="300">
                <TextBlock
                    Margin="0,0,0,5"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="Вход в систему" />

                <Image
                    Width="100"
                    Margin="0,0,0,5"
                    Source="/pagesFr/photo/Icon.png" />

                <StackPanel Orientation="Horizontal">
                    <Label
                        Margin="0,0,0,15"
                        Content="Логин: "
                        FontSize="14" />
                    <TextBox
                        x:Name="LoginTextBox"
                        Width="240"
                        Height="30"
                        Margin="0,0,0,15" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Пароль: " />
                    <PasswordBox
                        x:Name="PasswordBox"
                        Width="230"
                        Height="30"
                        Margin="0,0,0,25" />
                </StackPanel>

                <Button
                    x:Name="LoginBtn"
                    Height="35"
                    Margin="0,0,0,10"
                    Background="{StaticResource AccentBrush}"
                    Click="LoginBtn_Click"
                    Content="Войти" />
                <Button
                    x:Name="GuestBtn"
                    Height="35"
                    Background="{StaticResource AccentBrush}"
                    Click="GuestBtn_Click"
                    Content="Войти как гость" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
<Page
    x:Class="Shoe_Store.Pages.ProductsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Shoe_Store.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Товары"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{StaticResource PrimaryBackground}"
    FontFamily="TimesNewRoman"
    FontSize="14"
    mc:Ignorable="d">

    <Grid Margin="10" Background="{StaticResource PrimaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image
            Width="50"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/pagesFr/photo/Icon.png" />

        <Border
            x:Name="UserInfoPanel"
            Grid.Row="0"
            Margin="5"
            Padding="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="{StaticResource AccentBrush}"
            CornerRadius="5">
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="0,0,15,0" Orientation="Vertical">
                    <TextBlock
                        x:Name="UserNameText"
                        FontSize="12"
                        FontWeight="Bold"
                        Text="" />
                    <TextBlock
                        x:Name="UserRoleText"
                        FontSize="11"
                        Text="" />
                </StackPanel>
                <Button
                    x:Name="LogoutBtn"
                    Width="80"
                    Height="30"
                    Background="{StaticResource SecondaryBackground}"
                    Click="LogoutBtn_Click"
                    Content="Выход" />
            </StackPanel>
        </Border>

        <Border
            x:Name="ControlsPanel"
            Grid.Row="0"
            Margin="0,50,0,10"
            Padding="15"
            Background="{StaticResource SecondaryBackground}"
            CornerRadius="5">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <StackPanel Margin="0,0,15,0" Orientation="Vertical">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="12"
                        Text="Поиск по названию" />
                    <TextBox
                        x:Name="SearchTextBox"
                        Width="150"
                        Height="30"
                        TextChanged="SearchTextBox_TextChanged" />
                </StackPanel>

                <StackPanel Margin="0,0,15,0" Orientation="Vertical">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="12"
                        Text="Сортировка" />
                    <ComboBox
                        x:Name="SortComboBox"
                        Width="150"
                        Height="30"
                        SelectedIndex="0"
                        SelectionChanged="SortComboBox_SelectionChanged">
                        <ComboBoxItem Content="Без сортировки" />
                        <ComboBoxItem Content="По количеству (возр.)" />
                        <ComboBoxItem Content="По количеству (убыв.)" />
                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="0,0,15,0" Orientation="Vertical">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="12"
                        Text="Категория" />
                    <ComboBox
                        x:Name="FilterComboBox"
                        Width="150"
                        Height="30"
                        SelectedIndex="0"
                        SelectionChanged="FilterComboBox_SelectionChanged">
                        <ComboBoxItem Content="Все категории" />
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Vertical" Visibility="Hidden">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="12"
                        Text="Скидка" />
                    <ComboBox
                        x:Name="DiscountFilterComboBox"
                        Width="150"
                        Height="30"
                        SelectedIndex="0"
                        SelectionChanged="DiscountFilterComboBox_SelectionChanged">
                        <ComboBoxItem Content="Все товары" />
                        <ComboBoxItem Content="Скидка &gt; 15%" />
                    </ComboBox>
                </StackPanel>

                <!--<StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="0,18,0,0">
                    <Button x:Name="ClearFiltersButton" Content="Очистить фильтры" Click="ClearFiltersButton_Click"
                            Width="130" Height="30" Background="{StaticResource AccentBrush}"/>
                </StackPanel>-->
            </StackPanel>
        </Border>

        <ListView
            Name="ProductsListView"
            Grid.Row="1"
            HorizontalContentAlignment="Stretch"
            d:ItemsSource="{d:SampleData ItemCount=5}"
            Background="{StaticResource PrimaryBackground}"
            BorderThickness="0"
            MouseDoubleClick="ProductsListView_MouseDoubleClick"
            ScrollViewer.HorizontalScrollBarVisibility="Auto">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border
                        Margin="2"
                        Padding="10"
                        Background="{Binding BackgroundColor}"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="5">
                        <Grid MinWidth="280">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="0.35*" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Grid.Column="0"
                                Height="150"
                                Margin="0,0,10,0"
                                Background="White"
                                BorderBrush="LightGray"
                                BorderThickness="1">
                                <Image Stretch="Uniform">
                                    <Image.Source>
                                        <Binding Path="Photo">
                                            <Binding.TargetNullValue>
                                                <BitmapImage UriSource="photo/Icon.png" />
                                            </Binding.TargetNullValue>
                                        </Binding>
                                    </Image.Source>
                                </Image>
                            </Border>

                            <StackPanel
                                Grid.Column="1"
                                Margin="0,0,10,0"
                                Orientation="Vertical">
                                <TextBlock
                                    Margin="0,0,0,2"
                                    FontSize="14"
                                    Text="{Binding Category1.CategoryName, StringFormat={}Категория товара | {0}}" />
                                <TextBlock
                                    Margin="0,5,0,5"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="{Binding Title1.TitleName}"
                                    TextWrapping="Wrap" />
                                <TextBlock FontSize="14" Text="{Binding Description, StringFormat={}Описание товара: {0}}" />
                                <TextBlock FontSize="14" Text="{Binding Manufacturer1.ManufacturerName, StringFormat={}Производитель: {0}}" />
                                <TextBlock FontSize="14" Text="{Binding Postavchick.SupplierName, StringFormat={}Поставщик: {0}}" />

                                <StackPanel Margin="0,2,0,5" Orientation="Horizontal">
                                    <TextBlock
                                        Margin="0,0,5,0"
                                        FontSize="14"
                                        Text="{Binding OriginalPriceValue, StringFormat={}{0} руб.}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextDecorations" Value="None" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasDiscount}" Value="True">
                                                        <Setter Property="TextDecorations" Value="Strikethrough" />
                                                        <Setter Property="Foreground" Value="DarkRed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Text="{Binding DiscountedPriceValue, StringFormat={}→ {0} руб.}"
                                        Visibility="{Binding HasDiscount}" />
                                </StackPanel>

                                <TextBlock FontSize="14" Text="{Binding Edinica, StringFormat={}Единица измерения: {0}}" />
                                <TextBlock FontSize="14" Text="{Binding CountOnSklad, StringFormat={}Количество на складе: {0}}" />
                            </StackPanel>

                            <Border
                                Grid.Column="2"
                                Padding="5"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                CornerRadius="3">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="DarkRed"
                                    Text="{Binding Sale, StringFormat={}Скидка: {0}%}"
                                    TextAlignment="Center" />
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
<Page
    x:Class="Shoe_Store.Pages.AddEditOrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Shoe_Store.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Добавление/редактирование заказа"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{StaticResource PrimaryBackground}"
    FontSize="14"
    mc:Ignorable="d">

    <Grid Margin="10" Background="{StaticResource PrimaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,5"
            Text="Дата заказа:" />
        <DatePicker
            x:Name="OrderDatePicker"
            Grid.Row="1"
            Margin="0,0,0,10"
            Background="White" />

        <TextBlock
            Grid.Row="2"
            Margin="0,0,0,5"
            Text="Дата доставки:" />
        <DatePicker
            x:Name="DeliveryDatePicker"
            Grid.Row="3"
            Margin="0,0,0,10"
            Background="White" />

        <TextBlock
            Grid.Row="4"
            Margin="0,0,0,5"
            Text="Статус:" />
        <ComboBox
            x:Name="StatusComboBox"
            Grid.Row="5"
            Margin="0,0,0,10"
            Background="White"
            DisplayMemberPath="StatusName"
            SelectedValuePath="ID_Status" />

        <TextBlock
            Grid.Row="6"
            Margin="0,0,0,5"
            Text="Адрес:" />
        <ComboBox
            x:Name="AddressComboBox"
            Grid.Row="7"
            Margin="0,0,0,20"
            Background="White"
            DisplayMemberPath="City"
            SelectedValuePath="ID" />

        <StackPanel
            Grid.Row="9"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="80"
                Margin="0,0,10,0"
                Background="{StaticResource AccentBrush}"
                Click="SaveButton_Click"
                Content="Сохранить" />
            <Button
                Width="80"
                Background="{StaticResource SecondaryBackground}"
                Click="CancelButton_Click"
                Content="Отмена" />
        </StackPanel>
    </Grid>
</Page>
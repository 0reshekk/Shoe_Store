<Page
    x:Class="Shoe_Store.Pages.AddEditProductPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Shoe_Store.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Добавление/редактирование товара"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{StaticResource PrimaryBackground}"
    FontSize="14"
    mc:Ignorable="d">

    <Grid Margin="10" Background="{StaticResource PrimaryBackground}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Margin="0,0,0,5" Text="Название:" />
                        <ComboBox
                            x:Name="TitleComboBox"
                            Margin="0,0,0,10"
                            Background="White"
                            DisplayMemberPath="TitleName"
                            SelectedValuePath="ID_Title" />

                        <TextBlock Margin="0,0,0,5" Text="Категория:" />
                        <ComboBox
                            x:Name="CategoryComboBox"
                            Margin="0,0,0,10"
                            Background="White"
                            DisplayMemberPath="CategoryName"
                            SelectedValuePath="ID_Category" />

                        <TextBlock Margin="0,0,0,5" Text="Производитель:" />
                        <ComboBox
                            x:Name="ManufacturerComboBox"
                            Margin="0,0,0,10"
                            Background="White"
                            DisplayMemberPath="ManufacturerName"
                            SelectedValuePath="ID_Manufacturer" />

                        <TextBlock Margin="0,0,0,5" Text="Поставщик:" />
                        <ComboBox
                            x:Name="SupplierComboBox"
                            Margin="0,0,0,10"
                            Background="White"
                            DisplayMemberPath="SupplierName"
                            SelectedValuePath="ID_Supplier" />

                        <TextBlock Margin="0,0,0,5" Text="Цена:" />
                        <TextBox
                            x:Name="PriceTextBox"
                            Margin="0,0,0,10"
                            Background="White" />

                        <TextBlock Margin="0,0,0,5" Text="Скидка (%):" />
                        <TextBox
                            x:Name="SaleTextBox"
                            Margin="0,0,0,10"
                            Background="White" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Margin="0,0,0,5" Text="Единица измерения:" />
                        <TextBox
                            x:Name="UnitTextBox"
                            Margin="0,0,0,10"
                            Background="White" />

                        <TextBlock Margin="0,0,0,5" Text="Количество на складе:" />
                        <TextBox
                            x:Name="CountTextBox"
                            Margin="0,0,0,10"
                            Background="White" />

                        <TextBlock Margin="0,0,0,5" Text="Описание:" />
                        <TextBox
                            x:Name="DescriptionTextBox"
                            Height="80"
                            Margin="0,0,0,10"
                            AcceptsReturn="True"
                            Background="White"
                            TextWrapping="Wrap" />

                        <TextBlock Margin="0,0,0,5" Text="Фото (URL):" />
                        <TextBox
                            x:Name="PhotoTextBox"
                            Margin="0,0,0,20"
                            Background="White"
                            Text="photo/default.png" />
                    </StackPanel>
                </Grid>

                <StackPanel
                    Margin="0,20,0,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        Width="100"
                        Height="35"
                        Margin="0,0,10,0"
                        Background="{StaticResource AccentBrush}"
                        Click="SaveButton_Click"
                        Content="Сохранить" />
                    <Button
                        Width="100"
                        Height="35"
                        Background="{StaticResource SecondaryBackground}"
                        Click="CancelButton_Click"
                        Content="Отмена" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>